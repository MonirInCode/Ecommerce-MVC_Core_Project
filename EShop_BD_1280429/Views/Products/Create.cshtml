@model EShop_BD_1280429.Models.Product
@{
    ViewBag.Title = "Create";
}
<br />
<br />
<br />
@using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container mt-5">
        <h2>Add Product</h2>
        <div class="card p-5">
            <form class="contact-form">
                <div class="form-group">
                    <label for="Name">Name:</label>
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter product name" })
                </div>
                <div class="form-group">
                    <label for="CategoryId">Categories:</label>
                    @Html.DropDownListFor(m => m.CategoryId, ViewBag.CatList as SelectList, "-- Select Category --", new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="Description">Description:</label>
                    @Html.TextBoxFor(m => m.Description, new { @class = "form-control", placeholder = "Enter product description" })
                </div>
                <div class="form-group">
                    <label for="Unit">Unit Price:</label>
                    @Html.TextBoxFor(m => m.Unit, new { @class = "form-control", placeholder = "Enter unit price" })
                </div>
                <div class="form-group">
                    <label for="Image">Select Image:</label>
                    <input type="file" name="Image" class="form-control-file" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Add Product" class="btn btn-primary py-3 px-5">
                </div>
            </form>
            @if (TempData["msg"] != null)
            {
                <h3 class="text-danger mt-3">@TempData["msg"]</h3>
            }
        </div>
    </div>
}
