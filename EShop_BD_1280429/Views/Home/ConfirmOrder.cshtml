@model EShop_BD_1280429.ViewModel.OrderUserVM

@{
    ViewBag.Title = "Confirm Order";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<h2 class="text-center my-4">Confirm Order</h2>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    @using (Html.BeginForm())
                    {
                        @Html.HiddenFor(model => model.InvoiceId)

                        <div class="form-group">
                            <label for="name">User Name:</label>
                            <p id="name" class="form-control-plaintext">@Html.DisplayFor(model => model.Name)</p>
                        </div>

                        <div class="form-group">
                            <label for="payment">Payment:</label>
                            <p id="payment" class="form-control-plaintext">@Html.DisplayFor(model => model.Payment)</p>
                        </div>

                        <div class="form-group">
                            <label for="bill">Bill:</label>
                            <p id="bill" class="form-control-plaintext">@Html.DisplayFor(model => model.Bill)</p>
                        </div>

                        <div class="form-group">
                            <label for="invoiceDate">Invoice Date:</label>
                            <p id="invoiceDate" class="form-control-plaintext">@Html.DisplayFor(model => model.InvoiceDate)</p>
                        </div>

                        <button type="submit" class="btn btn-success btn-block">Confirm Order</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
